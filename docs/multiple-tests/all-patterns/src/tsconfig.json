{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "exactOptionalPropertyTypes": false,
    "allowArbitraryExtensions": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "noEmit": true,
    "noEmitOnError": true,
    "strict": false,
    "lib": [
      "ES2022",
      "DOM",
      "ESNext"
    ],
    "target": "ESNext",
    "disableReferencedProjectLoad": true,
    "disableSolutionSearching": true,
    "noErrorTruncation": true,
    "pretty": false,
    "skipLibCheck": false,
    "sourceMap": false,
    "strictNullChecks": true
  },
  "include": [
    "./*.js"
  ]
}