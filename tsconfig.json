{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "noErrorTruncation": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
