{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "exactOptionalPropertyTypes": false,
    "allowArbitraryExtensions": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "noEmit": true,
    "noEmitOnError": true,
    "strict": false,
    "lib": [
      "ES2020",
      "ES2021",
      "ES2022",
      "DOM",
      "ESNext"
    ],
    "target": "ESNext",
    "disableReferencedProjectLoad": true,
    "disableSolutionSearching": true,
    "noErrorTruncation": true,
    "pretty": false,
    "skipLibCheck": false,
    "sourceMap": false,
    "strictNullChecks": true
  },
  "include": [
    "/src/**/*.ts",
    "/src/**/*.tsx",
    "/src/**/*.js",
    "/src/**/*.jsx",
    "/src/**/*.json"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/build/**/*"
  ]
}
